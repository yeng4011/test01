public class ex01 {

    static double Cal_area(double r)
    
    { return Math.PI*r*r*r*(4*1.0/3);}
    
    static int Cal_area(int length, int width,int height)
    
    { return length*width*2+length*height*2+width*height*2;}
    
    
    public static void main(String[] args) {
        System.out.println("半徑 = "+10 );

        System.out.println("球形體積 = " + (Math.round(Cal_area(10) * 10.0)/10.0));

        System.out.println("長等於 = "+4+","+"寬等於 = "+5+","+"高等於 = "+6);
        
        System.out.println("立方體表面積 = " + (Cal_area(4,5,6)));
      

}

}
